<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Status</th>
      <th scope="col">Total</th>
      <th scope="col">Discount</th>
    </tr>
  </thead>
  <tbody>
    <% if @orders.present? %>
    	<% @orders.each do |order| %>
  	  	<tr>
  	      <th scope="row"><%= order.id %></th>
  	      <td><%= order.status %></td>
  	      <td><%= order.total %></td>
  	      <td><%= order.discount_value %></td>
  	    </tr>

    	<% end %>
    <% else %>
      No order placed
    <% end %>
  </tbody>
</table>